// define layer numbers
#define BASE 0
#define NUM 1
#define SYM 2
#define NAV 3

// zmk includes
#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

// personal includes
#include "includes/homerow_mods.dtsi"
